{% extends 'base.html.twig' %}

{% block body %}
<style>
.form-group
{
  max-width: 340px;
  margin: 10px auto;
}

input[type="submit "]:hover, input[type="submit"]:focus, input[type="submit"].active:focus, input[type="submit"].active:hover,input[type="submit"].active.hover, input[type="submit"].active.focus
{    color: #fff;
    background-color: #204d74;
    border-color: #122b40;
}
input[type="submit"], input[type="button"]
{
    margin-left: 1px;
    margin-top: 1px;
    margin-right: 1px;
    margin-bottom: 1px;
    height: 34px;
    color: white;
}
input
{
   display: block;
    height: 34px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
}
th
{
  text-align: center;
  text-transform: uppercase;
}
.btn
{
    display: inline-block;
    padding: 6px 12px;
    margin-left: 1px;
    margin-top: 1px;
    margin-right: 1px;
    margin-bottom: 1px;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.42857143;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    touch-action: manipulation;
    user-select: none;
    border: 1px solid transparent;
    border-radius: 4px;

  }

th,tr,td
{
 border:10px solid #e8ebef;
}
ul
{
 padding: 0px;
 margin: 0px;
}
h3
{
  text-align: center;
}

</style>

<div class="form-group">
    <h3>Liste d'utilisateurs</h3>

    <table class="table1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <ul>
                    <a href="{{ path('user_show', { 'id': user.id })}}"><input type="button" class="btn btn-success mb-2 " value="{{ 'Show'|trans }}"/></a>
                   </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>

            <a class="btn btn-primary mb-2 " href="{{ path('fos_user_registration_register') }}">Create a new user</a>

    </ul>
  </div>
{% endblock %}
