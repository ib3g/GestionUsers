{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class = "alert alert-danger">{{ 'Username ou password invalide' }}</div>
{% endif %}
<style>
  Form
  {
   max-width: 400px;
   margin: 50px auto;
   padding: 20px;
  }
  input
  {
   margin: 10px;
  }

</style>

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username">{{ 'security.login.username'|trans }}</label>
    <input type="text" class="form-control" placeholder="username" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" class="form-control" placeholder="password" id="password" name="_password" required="required" autocomplete="current-password" />

    <label class="form-check-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on" />

    <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    <a href="{{ path('fos_user_registration_register')}}"><input type="button" class="btn btn-primary mb-2" value="{{ 'Register'|trans }}"/></a>

</form>
