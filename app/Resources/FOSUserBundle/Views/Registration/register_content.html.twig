      {{ form_widget(form) }}

    <div>
        <input type="submit" class="btn btn-primary mb-2" value="{{ 'registration.submit'|trans }}" />
        <a href="{{ path('fos_user_security_login')}}"><input type="button" class="btn btn-primary mb-2" value="{{ 'Or Login'|trans }}"/></a>
    </div>
