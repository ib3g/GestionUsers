{% trans_default_domain 'FOSUserBundle' %}

<style>
.form-group
{
  max-width: 400px;
  margin: 10px auto;
}

input[type="submit "]:hover, input[type="submit"]:focus, input[type="submit"].active:focus, input[type="submit"].active:hover,input[type="submit"].active.hover, input[type="submit"].active.focus
{    color: #fff;
    background-color: #204d74;
    border-color: #122b40;
}
input[type="submit"], input[type="button"]
{
    margin-top: 15px;
    margin-left: 15px;
    width: 30%;
    background-color: #337ab7;
    color: white;
}
input
{
   display: block;
    width: 100%;
    height: 34px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
}
label
{
  margin: 10px;
  display: block;
}
